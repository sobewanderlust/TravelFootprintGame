<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#DCE775</item> <!-- color of app bar -->
        <item name="colorPrimaryDark">#CDDC39</item> <!-- Color of status bar -->
        <item name="colorButtonNormal">#F0F4C3</item> <!-- Background color of buttons in the app -->
    </style>

    <!-- Style to Travelers A and B -->
    <style name="StyleTravelerNames" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style to Current scores of Travelers A and B-->
    <style name="StyleScores" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">56sp</item>
    </style>

    <!-- Style to Score Buttons-->
    <style name="StyleButtons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.75</item>
    </style>

</resources>
